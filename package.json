{
  "name": "@stencila/style",
  "version": "2.0.0",
  "description": "Stencila's visual design resources and style guide",
  "main": "index.js",
  "repository": "https://github.com/stencila/style",
  "author": "https://github.com/stencila/style/graphs/contributors",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "npm run build && concurrently \"npm run storybook\" \"npm run build:watch\"",
    "build": "npx lerna run build",
    "build:watch": "npx lerna run build:watch --stream --parallel",
    "bootstrap": "npx lerna exec npm install",
    "storybook": "start-storybook -p 9006 -s ./packages/brand/dist,./packages/style-material/dist,./packages/style-stencila/dist,./packages/components/dist",
    "storybook:build": "build-storybook -o docs -s ./packages/brand/dist,./packages/style-material/dist,./packages/style-stencila/dist,./packages/components/dist"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@stencila/dev-config": "^1.1.1",
    "@storybook/addon-a11y": "^5.1.9",
    "@storybook/addon-cssresources": "^5.1.9",
    "@storybook/html": "^5.1.9",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.1",
    "copy-webpack-plugin": "^5.0.3",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "globby": "^10.0.1",
    "lerna": "^3.15.0",
    "parcel-bundler": "^1.12.3",
    "postcss-cli": "^6.1.3",
    "postcss-custom-properties": "^8.0.11",
    "postcss-import": "^12.0.1",
    "postcss-import-url": "^4.0.0",
    "postcss-modules": "^1.4.1",
    "postcss-nested": "^4.1.2",
    "postcss-parcel-import": "0.0.2",
    "postcss-url": "^8.0.0",
    "storybook-addon-root-attribute": "^0.2.1",
    "storybook-readme": "^5.0.5",
    "tailwindcss": "^1.0.4",
    "typescript": "^3.5.3",
    "write-file-webpack-plugin": "^4.5.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "release": {
    "extends": "@stencila/semantic-release-config"
  }
}
