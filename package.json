{
  "name": "@stencila/style",
  "version": "1.0.0",
  "description": "Stencila's visual design resources and style guide",
  "main": "index.js",
  "repository": "https://github.com/stencila/style",
  "author": "https://github.com/stencila/style/graphs/contributors",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.5",
    "@semantic-release/github": "^5.2.5",
    "@semantic-release/npm": "^5.1.1",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@storybook/addon-notes": "^4.0.11",
    "@storybook/addon-storysource": "^4.0.11",
    "@storybook/addons": "^4.0.11",
    "@storybook/html": "^4.0.11",
    "autoprefixer": "^7.2.6",
    "babel-loader": "^8.0.4",
    "babel-runtime": "^6.26.0",
    "bulma": "^0.7.2",
    "node-sass": "^4.10.0",
    "postcss-cli": "^4.1.1",
    "sass-module-importer": "^1.4.0",
    "semantic-release": "^15.12.4"
  },
  "style": "sass/stencila.sass",
  "scripts": {
    "watch": "npm run css-watch",
    "serve": "http-server ./ -a 127.0.0.1 -c-1",
    "build": "npm run css-build",
    "deploy": "npm run css-deploy",
    "css-build": "node-sass --importer ./node_modules/sass-module-importer --output-style compressed sass/stencila.sass dist/css/stencila.min.css",
    "css-watch": "npm run css-build -- --watch",
    "css-postcss": "postcss --use autoprefixer --output dist/css/stencila.css dist/css/stencila.css",
    "css-gzip": "gzip -c dist/css/stencila.css > dist/css/stencila.css.gz",
    "css-deploy": "npm run css-build && npm run css-postcss && npm run css-gzip",
    "storybook": "start-storybook --port 9001 --static-dir .storybook --static-dir dist",
    "storybook-build": "build-storybook --static-dir .storybook --static-dir dist --output-dir docs",
    "semantic-release": "semantic-release"
  }
}
