{
  "name": "@stencila/style-stencila",
  "version": "0.1.0",
  "description": "Custom designed theme for Stencila components",
  "keywords": [
    "Stencila",
    "design",
    "theme"
  ],
  "author": "Stencila <hello@stenci.la>",
  "homepage": "https://stenci.la",
  "license": "Apache-2.0",
  "main": "dist/index-stencila.css",
  "directories": {
    "src": "src"
  },
  "style": "./dist/index-stencila.css",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/style.git"
  },
  "scripts": {
    "start": "parcel ./src/index.css",
    "build": "npm run build:package && npm run build:css",
    "build:watch": "concurrently \"npm run build:package:watch\" \"npm run build:css:watch\"",
    "build:package": "parcel build 'src/*.css' 'src/**/*.css' --public-url ./",
    "build:package:watch": "parcel watch 'src/*.css' 'src/**/*.css'  --public-url ./",
    "build:css": "postcss 'dist/*.css' 'dist/**/*.css' -r",
    "build:css:watch": "postcss 'dist/*.css' 'dist/**/*.css' --watch -r"
  },
  "bugs": {
    "url": "https://github.com/stencila/style/issues"
  },
  "dependencies": {
    "@stencila/brand": "file:../brand",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.2",
    "postcss-insert": "^1.0.0",
    "tailwindcss": "^1.0.4"
  },
  "devDependencies": {
    "@abide-community/parcel-plugin-clean-out-dir": "^1.0.0",
    "concurrently": "^4.1.1",
    "parcel-plugin-css-pretransform": "^1.0.0"
  }
}
