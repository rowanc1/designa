{
  "name": "@stencila/components",
  "version": "0.4.2",
  "description": "Stencila Web Components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/stencila-components/stencila-components.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "build:watch": "concurrently \"npm run dev\" \"chokidar '../style-*/dist/*.css' -c 'npm run kill; npm run clean && npm run dev'\"",
    "dev": "stencil build --dev --watch",
    "kill": "pkill -f \"Stencil: stencila-components\"",
    "clean": "rimraf .stencil",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@stencil/core": "^1.7.2",
    "@stencil/postcss": "^1.0.1",
    "@stencila/schema": "^0.29.0",
    "@types/feather-icons": "^4.7.0",
    "@types/jest": "^24.0.19",
    "postcss-custom-properties": "^9.0.2",
    "postcss-import": "^12.0.1",
    "puppeteer": "^1.20.0"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@stencila/style-material": "file:../style-material",
    "@stencila/style-stencila": "file:../style-stencila",
    "chokidar-cli": "^2.0.0",
    "feather-icons": "^4.24.1",
    "fp-ts": "^2.1.0",
    "tailwindcss": "^1.1.2",
    "tocbot": "^4.8.1",
    "webfontloader": "^1.6.28"
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config/eslint-config-stencil",
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  }
}
