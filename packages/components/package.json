{
  "name": "@stencila/components",
  "version": "0.11.0",
  "description": "Stencila Web Components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/stencila-components/stencila-components.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs --legacy",
    "build:watch": "concurrently \"npm run dev\" \"chokidar '../style-*/dist/*.css' -c 'npm run kill; npm run clean && npm run dev'\"",
    "dev": "stencil build --dev --watch --docs --legacy",
    "kill": "pkill -f \"Stencil: stencila-components\"",
    "clean": "rimraf .stencil",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "lint": "eslint 'src/**/*.{ts,js}'"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@stencil/core": "^1.10.0",
    "@stencil/postcss": "^1.0.1",
    "@stencila/schema": "^0.37.3",
    "@types/feather-icons": "^4.7.0",
    "@types/jest": "^25.2.1",
    "@types/puppeteer": "^2.0.1",
    "chokidar-cli": "^2.1.0",
    "jest": "^25.3.0",
    "jest-cli": "^25.3.0",
    "postcss-custom-properties": "^9.1.1",
    "postcss-import": "^12.0.1",
    "puppeteer": "^3.0.0",
    "tailwindcss": "^1.2.0"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@codemirror/next": "^0.5.5",
    "@popperjs/core": "^2.3.3",
    "@stencila/style-material": "file:../style-material",
    "@stencila/style-stencila": "file:../style-stencila",
    "feather-icons": "^4.28.0",
    "fp-ts": "^2.4.4",
    "tocbot": "^4.10.1",
    "webfontloader": "^1.6.28"
  },
  "peerDependencies": {
    "@stencila/schema": "^0.37.0"
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config/eslint-config-stencil",
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/strict-boolean-expressions": [
        "error",
        {
          "allowNullable": true,
          "ignoreRhs": true
        }
      ],
      "@stencil/ban-prefix": "off",
      "@stencil/decorators-style": "off"
    },
    "overrides": [
      {
        "files": [
          "*.test.ts",
          "*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  }
}
